@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div tabindex="-1" style="display:block" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div style="justify-content:center" class="modal-header">
                        <form id="account" method="post">
                            <h4>Inicia sesión para usar tu cuenta.</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Contraseña</label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="text-align:center">
                                <button type="submit" style="background-color: #005473" class="btn btn-primary border-0">Iniciar sesión</button>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear nueva cuenta</a>
                                </p>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
